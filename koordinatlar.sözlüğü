# Koordinatlar tuple listesi
coordinates = [(10, 20), (15, 25), (20, 30)]

# Koordinatları yazdırma
print("Koordinatlar:")
for (x, y) in coordinates:
    print(f"X: {x}, Y: {y}")

# Koordinatların ortalamasını hesaplama
avg_x = sum(x for x, y in coordinates) / len(coordinates)
avg_y = sum(y for x, y in coordinates) / len(coordinates)

print(f"Ortalama Koordinatlar: X: {avg_x}, Y: {avg_y}")
